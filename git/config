[push]
	default = simple
	followTags = true
[core]
	excludesfile = ~/.config/git/ignore
	attributesfile = ~/.config/git/attributes
	quotepath = false
	precomposeunicode = true
	pager = less -r
	commentChar = %
[user]
	name = Kyoichiro Yamada
	email = me@kyoh86.dev
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[alias]
	pbcopy = !printf "$1" | pbcopy
	conflicts = !git ls-files -u | cut -f 2 | sort -u
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[color "status"]
	added = green
	changed = red
	untracked = blue
	unmerged = yellow
[merge]
	ff = false
	tool = vimdiff
[fetch]
	prune = true
[http "https://gopkg.in"]
	followRedirects = true
[diff]
