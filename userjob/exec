#!env zsh

rm -f /usr/local/var/userjob-log.log
source /etc/zshenv
source ${ZDOTDIR}/.zshenv

error=""

# Bundle brew:
if [ -f /usr/local/bin/brew ]; then
  file=${HOME}/.config/homebrew/bundle
  brew bundle dump --force --file=${file} || error="1"
  cat ${file} | sort --reverse | sponge ${file} || error="1"
fi

