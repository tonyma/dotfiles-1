#!/bin/zsh

git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si
cd -
rm -rf ./yay

# inuxのヘッダファイル群。makeするときに何やかや出番が多い
yay -S \
  linux-headers

# シェルを便利にしたい群
yay -S \
  zsh-syntax-highlighting zsh-completions \
  diff-so-fancy

# CLI人権ツール群
yay -S \
  wget \
  ripgrep \
  gvim

# 開発でよく使うツール、言語系
yay -S \
  inotify-tools \
  jq httpie asciinema \
  git hub tig \
  sqlite postgresql mysql \
  yarn go puthon python-pip python-language-server \
  shellcheck \
  docker aws-cli docker-compose

# Bash CLIツール群
yay -S \
  libnotify \
  coreutils \
  binutils \
  diffutils \
  findutils \
  bash

# その他
yay -S \
  chrome-gnome-shell \
  chromium \
  seahorse \
  gyazo \
  slack-desktop
